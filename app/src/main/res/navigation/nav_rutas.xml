<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_rutas"
    app:startDestination="@id/rutaListarFragment">

    <fragment
        android:id="@+id/rutaListarFragment"
        android:name="com.example.sportapp.ui.RutasListarFragment"
        android:label="fragment_collector"
        tools:layout="@layout/fragment_rutas_listar">
        <action
            android:id="@+id/action_rutasListarFragment_to_rutasDetalle"
            app:destination="@id/rutaDetallePlan"
            />
    </fragment>
    <fragment
        android:id="@+id/rutaDetallePlan"
        android:name="com.example.sportapp.ui.RutasDetalleFragment"
        android:label="collector_detail_fragment"
        tools:layout="@layout/fragment_rutas_detalle" >
        <argument
            android:name="plan"
            app:argType="com.example.sportapp.models.Rutas"
            />
    </fragment>
</navigation>