<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EntrenarDetalleFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entrenarDia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textColor="#E1000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entrenarEstado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/entrenarMarcaStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca Street"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewlblFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblfechainicio"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/entrenarFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@+id/entrenarFechaInicio"
                android:inputType="text"
                android:maxLength="100"
                android:text=""
                android:textColorHint="#673AB7" />

            <TextView
                android:id="@+id/textViewlblFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblfechafin"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/entrenarFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@+id/entrenarFechaFin"
                android:inputType="text"
                android:maxLength="100"
                android:text=""
                android:textColorHint="#673AB7"/>

            <TextView
                android:id="@+id/textViewlblCalorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblcalorias"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/entrenarCalorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@+id/entrenarCalorias"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:text=""
                android:textColorHint="#673AB7" />

            <TextView
                android:id="@+id/textViewlblVelocidadMaxima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblVelocidadMaxima"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/entrenarVelocidadMaxima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@+id/entrenarCalorias"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:text=""
                android:textColorHint="#673AB7"/>


            <TextView
                android:id="@+id/textViewlblDistanciaRecorrida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblDistanciaRecorrida"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/entrenarDistanciaRecorrida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@+id/entrenarDistanciaRecorrida"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:text=""
                android:textColorHint="#673AB7" />

            <Button
                android:id="@+id/buttonGuardadDia"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:onClick="guardarDia"
                android:text="@string/lblguardar"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="616dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>